<section class="extended hero home-section">
  <div class="hero__container">
    <div class="row">
      <div class="columns large-6 hero-text-column">
        <h1 class="text-highlight heading1 hero-heading">
          <% if translated_welcome_text.blank? %>
            <%= t("decidim.pages.home.hero.welcome", organization: current_organization.name) %>
          <% else %>
            <%= decidim_sanitize translated_welcome_text %>
          <% end %>
        </h1>
        <span class="dates">
          <%= newest_edition_dates %>
        </span>
        <div class="medium-12">
          <%= cta_button_new %>
        </div>
      </div>
      <div class="columns large-6">
        <div class="elipse-image-wrapper">
          <% if background_image %>
            <%= image_tag background_image, alt: "" %>
          <% end %>
        </div>
        <div class="decorator-element two-circles">
        </div>
      </div>
    </div>
  </div>
</section>
