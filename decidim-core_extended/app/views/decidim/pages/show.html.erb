<% add_decidim_meta_tags(
     title: @topic ? "#{translated_attribute(@topic.title)} - #{translated_attribute(@page.title)}" : translated_attribute(@page.title),
     description: translated_attribute(@page.content)
   ) %>

<%
  edit_link(
    decidim_admin.edit_static_page_path(@page),
    :update,
    :static_page,
    static_page: @page
  )
%>

<div class="static-page">
  <%= render partial: "header", locals: {
    title: translated_attribute(@page.title),
    description: nil,
    page: @page
  } %>

  <% if @topic %>
    <%= render page_template(@page),
               title: translated_attribute(@topic.title),
               description: translated_attribute(@topic.description),
               page: @page,
               pages: @pages
    %>

  <% else %>
    <%= render page_template(@page),
               title: translated_attribute(@page.title),
               description: nil,
               page: @page
    %>
  <% end %>


</div>