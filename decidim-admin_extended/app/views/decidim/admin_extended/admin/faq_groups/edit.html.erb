<%= decidim_form_for(@form) do |f| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t("actions.edit_faq_group", scope: "decidim.admin_extended.admin.faq_groups") %></h2>
    </div>
    <div class="card-section">
      <%= render partial: "form", object: f %>
    </div>
  </div>
  <div class="button--double form-general-submit">
    <%= link_to t("actions.cancel", scope: "decidim.admin_extended.admin.faqs"), faqs_path, class: "button hollow" %>
    <%= f.submit t("actions.save", scope: "decidim.admin_extended.admin.faqs") %>
  </div>
<% end %>
