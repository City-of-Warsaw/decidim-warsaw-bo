
<div class="row column">
  <%= form.translated :text_field, :name %>
</div>

<div class="row">
  <div class="columns xlarge-6">
    <%= form.text_field :code %>
    <% if scope&.code == 'om' %>
      <span class="help-text text-alert">Dla zakresu Ogólnomiejskiego kod nie zostanie zaktualizowany, ponieważ jest elementem systemowym</span>
    <% end %>
  </div>
  <div class="columns xlarge-6">
    <%= form.collection_select :scope_type_id, organization_scope_types, :id, :name %>
  </div>
  <div class="columns xlarge-6">
    <%= form.collection_select :department_id, organization_departments, :id, :name %>
  </div>
  <div class="columns xlarge-6">
    <%= form.text_field :position %>
  </div>
</div>
