<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= link_to "Projekty > ", projects_path %>
      <%= decidim_html_escape(@project&.title).html_safe %>
    </h2>
  </div>

  <div class="card-section">
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">
          Wybierz weryfikatora by przekazaÄ‡ projekt do ponownej oceny
        </h2>
      </div>
      <div class="card-section">
        <%= decidim_form_for(@form, url: submit_for_verification_project_reevaluations_path(@project), method: :post, html: { class: "form new_user" }) do |f| %>
