<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= link_to "Projekty > ", projects_path %>
      <%= decidim_html_escape(@project&.title).html_safe %>
    </h2>
  </div>

  <div class="card-section">

    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">
          Wybierz podkoordynatora by przekazać mu możliwość zarządzania projektem
        </h2>
      </div>
      <div class="card-section">
        <% url = forward_to_user_project_evaluations_path(@project) %>
        <%= decidim_form_for(@form, url: url, method: :post, html: { class: "form new_user" }) do |f| %>
          <%= f.select :user_id, @form.possible_sub_coordinator_ids, include_blank: true, label: 'Podkoordynator' %>

          <div class="button--double form-general-submit">
            <%= f.submit 'Przypisz' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
