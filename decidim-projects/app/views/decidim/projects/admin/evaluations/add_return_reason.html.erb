<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= link_to "Projekty > ", projects_path %>
      <%= decidim_html_escape(@project&.title).html_safe %>
    </h2>
  </div>

  <div class="card-section">

    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">
          Zawróć projekt do poprzedniej komórki:
          <%= @project.previous_department.name %>
        </h2>


      </div>
      <div class="card-section">
        <% url = return_to_department_project_evaluations_path(@project) %>
        <%= decidim_form_for(@form, url: url, method: :post, as: :evaluation_note, html: { class: "form new_user" }) do |f| %>

          <%= f.text_area :body, label: 'Wyjaśnij, dlaczego zwracasz projekt', rows: 3, help_text: '<br>Możesz dodatkowo przekazać informajcę o tym, dlaczego zwracasz projekt, np: "Projekt powinien trafić do Jednostki Ogólnomiejskiej, ze względu na..."'.html_safe %>

          <div class="button--double form-general-submit">
            <%= f.submit 'Zwróć' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
