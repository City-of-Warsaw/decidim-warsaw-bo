<div class="card with-overflow">
  <div class="card-divider">
    <h2 class="card-title"><%= poster_template.title %></h2>
  </div>

  <fieldset class="card-section">
    <div class="card with-overflow" id='user-groups'>
      <div class="card-divider">
        <h2 class="card-title flex--sbc">
          <div><%= t("form.data", scope: "decidim.projects.admin.poster_templates") %></div>
          <div class="flex--cc flex-gap--1">
            <div id="js-other-actions-wrapper" class="text-right">

              <%= link_to "Pobierz testowy plakat", Decidim::EngineRouter.main_proxy(current_participatory_space.components.first)
                                                                         .project_poster_path(project_id: 0, id: poster_template.id, format: :jpg), class: "button tiny button--simple" %>
            </div>
          </div>
        </h2>
      </div>

      <fieldset class="card-section">
        <p>
          <%= t("form.subtitle", scope: "decidim.projects.admin.poster_templates") %> :
          <%= poster_template.subtitle.presence || t("form.empty", scope: "decidim.projects.admin.poster_templates") %>
        </p>
        <p>
          <%= t("form.published", scope: "decidim.projects.admin.poster_templates") %> :
          <%= poster_template.published.present? ? t("form.published_yes", scope: "decidim.projects.admin.poster_templates") : t("form.published_no", scope: "decidim.projects.admin.poster_templates") %>
        </p>
        <p><%= t("form.width", scope: "decidim.projects.admin.poster_templates") %>: <%= poster_template.width %></p>
        <p><%= t("form.height", scope: "decidim.projects.admin.poster_templates") %>: <%= poster_template.height %></p>
        <p>
          <%= t("form.background_file", scope: "decidim.projects.admin.poster_templates") %> :
          <%= poster_template.background_file.filename %>
        </p>
        <p>
          Miniatura t≈Ça:
          <%= image_tag(main_app.rails_representation_path(poster_template.thumbnail_150)) if poster_template.background_file.attached? %>
          <%= icon_link_to "data-transfer-download",
                           main_app.rails_blob_path(poster_template.background_file, disposition: "attachment"),
                           t("actions.download_background_file", scope: "decidim.projects.admin.poster_templates"),
                           class: "action-icon--data-transfer-download" %>
        </p>
        <p>
          <%= t("form.body_css", scope: "decidim.projects.admin.poster_templates") %> :
          <%= poster_template.body_css.presence || t("form.empty", scope: "decidim.projects.admin.poster_templates") %>
        </p>
      </fieldset>

      <div class="card-divider">
        <h2 class="card-title"><%= t("form.title", scope: "decidim.projects.admin.poster_templates") %></h2>
      </div>

      <fieldset class="card-section">
        <p>
          <%= t("form.project_title_x", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_title_x %>
        </p>
        <p>
          <%= t("form.project_title_y", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_title_y %>
        </p>
        <p>
          <%= t("form.project_title_width", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_title_width %>
        </p>
        <p>
          <%= t("form.project_title_height", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_title_height %>
        </p>
        <p>
          <%= t("form.project_title_css", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_title_css.presence || t("form.empty", scope: "decidim.projects.admin.poster_templates") %>
        </p>

        <p>
          <%= t("form.sample_title", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.sample_title %>
        </p>
      </fieldset>

      <div class="card-divider">
        <h2 class="card-title"><%= t("form.area", scope: "decidim.projects.admin.poster_templates") %></h2>
      </div>

      <fieldset class="card-section">
        <p>
          <%= t("form.project_area_x", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_area_x %>
        </p>
        <p>
          <%= t("form.project_area_y", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_area_y %>
        </p>
        <p>
          <%= t("form.project_area_width", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_area_width %>
        </p>
        <p>
          <%= t("form.project_area_height", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_area_height %>
        </p>
        <p>
          <%= t("form.project_area_css", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_area_css.presence || t("form.empty", scope: "decidim.projects.admin.poster_templates") %>
        </p>
        <p>
          <%= t("form.sample_project_area", scope: "decidim.projects.admin.poster_templates") %>:
          <%= Decidim::Scope.find_by(id: poster_template.sample_project_area)&.name["pl"] if poster_template.sample_project_area.present? %>
        </p>

      </fieldset>

      <div class="card-divider">
        <h2 class="card-title"><%= t("form.number", scope: "decidim.projects.admin.poster_templates") %></h2>
      </div>

      <fieldset class="card-section">
        <p>
          <%= t("form.project_number_x", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_number_x %>
        </p>
        <p>
          <%= t("form.project_number_y", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_number_y %>
        </p>
        <p>
          <%= t("form.project_number_width", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_number_width %>
        </p>
        <p>
          <%= t("form.project_number_height", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_number_height %>
        </p>
        <p>
          <%= t("form.project_number_css", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.project_title_css.presence || t("form.empty", scope: "decidim.projects.admin.poster_templates") %>
        </p>

        <p>
          <%= t("form.sample_project_number", scope: "decidim.projects.admin.poster_templates") %>:
          <%= poster_template.sample_project_number %>
        </p>
      </fieldset>

    </div>
  </fieldset>
</div>
<div class="row">
  <div class="columns large-12 text-right">
    <div class="actions">
      <div class="button--double form-general-submit">
        <%= link_to t(".back"), decidim_admin_participatory_processes.poster_templates_path, class: "button hollow" %>
        <%= link_to "Edytuj", decidim_admin_participatory_processes.edit_poster_template_path(id: poster_template.id), class: "button button--simple" %>
      </div>
    </div>
  </div>
</div>
