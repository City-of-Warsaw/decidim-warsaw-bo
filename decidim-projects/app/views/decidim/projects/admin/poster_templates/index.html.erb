<div class="card with-overflow" id='user-groups'>
  <div class="card-divider">
    <h2 class="card-title flex--sbc">
      <div><%= t("decidim.admin.titles.poster_templates") %></div>
      <div class="flex--cc flex-gap--1">
        <div id="js-other-actions-wrapper" class="text-right">
          <%= link_to t("actions.add_poster_template", scope: "decidim.projects.admin.poster_templates"), decidim_admin_participatory_processes.new_poster_template_path, class: "button tiny button--simple" %>
        </div>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th class="text-col"><%= t(".title") %></th>
            <th><%= t(".subtitle") %></th>
            <th><%= t(".published") %></th>
            <th><%= t(".created_at") %></th>
            <th><%= t(".actions") %></th>
          </tr>
        </thead>
        <tbody>
        <% poster_templates.each do |poster_template| %>
          <tr>
            <td class="text-col">
              <%= link_to poster_template.title, decidim_admin_participatory_processes.poster_template_path(id: poster_template) %>
            </td>
            <td><%= poster_template.subtitle.presence || "-" %></td>
            <td><%= poster_template.published.present? ? t(".published_yes") : t(".published_no") %></td>
            <td><%= l poster_template.created_at, format: :decidim_short %></td>
            <td class="table-list__actions">
              <%= icon_link_to "zoom-in",
                               decidim_admin_participatory_processes.poster_template_path(id: poster_template.id),
                               t("actions.show", scope: "decidim.projects.admin.poster_templates"),
                               class: "action-icon--browse" %>
              <%= icon_link_to "pencil",
                               decidim_admin_participatory_processes.edit_poster_template_path(id: poster_template.id),
                               t("actions.edit_poster_template", scope: "decidim.projects.admin.poster_templates"),
                               class: "action-icon--edit" %>
              <%= icon_link_to "circle-x",
                               decidim_admin_participatory_processes.destroy_poster_template_path(id: poster_template.id),
                               t("actions.destroy_poster_template", scope: "decidim.projects.admin.poster_templates"),
                               class: "action-icon--remove",
                               method: :delete,
                               data: { confirm: t("actions.confim_destroy_poster_template", scope: "decidim.projects.admin.poster_templates") } %>

            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
