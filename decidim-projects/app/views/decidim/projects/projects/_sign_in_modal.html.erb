<div class="reveal confirm-reveal"
     id="sign-in-modal"
     aria-hidden="true"
     role="dialog"
     aria-modal="true"
     aria-labelledby="sign-in-modal-title"
     aria-describedby="sign-in-modal-content"
     data-reveal
     data-multiple-opened="true"
     tabindex="-1"
>
  <div class="reveal__header">
    <h2 class="reveal__title" id="sign-in-modal-title"><%= t(".title") %></h2>
    <button class="close-button" data-close aria-label="<%= t(".close_modal") %>"
            type="button" tabindex="0">
      <span aria-hidden="true">&times;<span class="wcag-invisible">Zamknij okno</span></span>
    </button>
  </div>
  <div class="confirm-content">
    <div class="" id="sign-in-modal-content" role="document" tabindex="0">
      <% translation = sending_message_modal_translation(project) %>
      <%== t(
             translation,
             sign_in_url: decidim.new_user_session_path,
             sign_up_url: decidim.new_user_registration_path
           ) %>
    </div>
  </div>
</div>
