<% add_decidim_page_title(t("devise.passwords.edit.change_your_password")) %>

<div class="wrapper with-double-decor">
  <div class="row collapse">
    <div class="row collapse">
      <div class="columns large-8 large-centered text-center page-title">
        <h1 class="devise-header"><%= t("devise.passwords.edit.change_your_password") %></h1>
      </div>
    </div>

    <div class="row">
      <div class="columns large-6 medium-centered">
        <div class="card no-border">
          <div class="card__content">
            <%= decidim_form_for(resource, namespace: "password", as: resource_name, url: password_path(resource_name), html: { method: :put, class: "register-form new_user" }) do |f| %>

              <%= f.hidden_field :reset_password_token %>

              <%= render 'decidim/devise/passwords/password_fields', f: f %>

              <div class="actions">
                <%= f.submit t("devise.passwords.edit.change_my_password"), class: "button expanded" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "decidim/users_extended/password-strength" %>